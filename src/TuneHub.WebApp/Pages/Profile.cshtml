@page
@model TuneHub.WebApp.Pages.ProfileModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Linq;

<div class="col-md-3 panel panel-default">
    <div class="panel panel-body">
        <img src=@Model.Me.Images.FirstOrDefault()?.SourceUrl alt="">
        <p>@Model.Me.Name</p>
    </div>
    <div class="panel panel-body">
        <ul class="nav nav-pills nav-stacked">
            <li><a>My Rooms</a></li>
            <li><a>My Settings</a></li>
        </ul>
    </div>
</div>

<div class="col-md-8 col-sm-offset-1 panel panel-default">
    <div class="panel panel-body">
        <table class="table table-striped">
            <tr>
                <th>Name</th>
                <th>Owner</th>
                <th class="text-right">No. of Tracks</th>
            </tr>
            @foreach (var item in Model.Playlists.List)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Owner.Name</td>
                    <td class="text-right">@item.Tracks.Total</td>
                </tr>
            }
        </table>
    </div>
</div>